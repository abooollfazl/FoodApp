<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          x:Class="FoodApp.Views.Chat.ChatPage"
                                       Title="چت"
                                                    FlowDirection="RightToLeft">

                                                        <Grid RowDefinitions="*,Auto">
                                                                
                                                                        <CollectionView Grid.Row="0" x:Name="MessagesCollection" Margin="10">
                                                                                    <CollectionView.ItemTemplate>
                                                                                                    <DataTemplate>
                                                                                                                        <Border BackgroundColor="{Binding BackgroundColor}" 
                                                                                                                                                    Padding="10" 
                                                                                                                                                                                Margin="5"
                                                                                                                                                                                                            HorizontalOptions="{Binding Alignment}">
                                                                                                                                                                                                                                    <VerticalStackLayout>
                                                                                                                                                                                                                                                                <Label Text="{Binding SenderName}" 
                                                                                                                                                                                                                                                                                                   FontAttributes="Bold" 
                                                                                                                                                                                                                                                                                                                                      FontSize="12"
                                                                                                                                                                                                                                                                                                                                                                         TextColor="Blue"/>
                                                                                                                                                                                                                                                                                                                                                                                                     <Label Text="{Binding Content}" FontSize="14"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                 <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    FontSize="10" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       TextColor="Gray"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          HorizontalOptions="End"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  </VerticalStackLayout>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      </Border>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      </DataTemplate>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  </CollectionView.ItemTemplate>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          </CollectionView>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Padding="10">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              <Entry x:Name="MessageEntry" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 Placeholder="پیام..." 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    Grid.Column="0"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <Button Text="ارسال" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    Clicked="OnSendClicked" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        Grid.Column="1"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            Margin="10,0,0,0"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    </Grid>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </Grid>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </ContentPage>