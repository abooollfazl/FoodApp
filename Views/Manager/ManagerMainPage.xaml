<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          x:Class="FoodApp.Views.Manager.ManagerMainPage"
                                       Title="پنل مدیر"
                                                    FlowDirection="RightToLeft">

                                                        <Grid RowDefinitions="Auto,Auto,*">
                                                                
                                                                        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="10">
                                                                                    <Label x:Name="WelcomeLabel" FontSize="20" FontAttributes="Bold"/>
                                                                                                
                                                                                                            <HorizontalStackLayout Spacing="10">
                                                                                                                            <Label Text="هفته:" VerticalOptions="Center"/>
                                                                                                                                            <Picker x:Name="WeekPicker" WidthRequest="100"/>
                                                                                                                                                            <Label Text="سال:" VerticalOptions="Center"/>
                                                                                                                                                                            <Entry x:Name="YearEntry" WidthRequest="100" Keyboard="Numeric"/>
                                                                                                                                                                                            <Button Text="نمایش همه" Clicked="OnShowAllClicked"/>
                                                                                                                                                                                                        </HorizontalStackLayout>
                                                                                                                                                                                                                </VerticalStackLayout>

                                                                                                                                                                                                                        <Button Grid.Row="1" 
                                                                                                                                                                                                                                        Text="ویرایش جیره خودم" 
                                                                                                                                                                                                                                                        Clicked="OnEditMyPlanClicked"
                                                                                                                                                                                                                                                                        Margin="20,0"/>

                                                                                                                                                                                                                                                                                <CollectionView Grid.Row="2" x:Name="MealPlansCollection" Margin="20">
                                                                                                                                                                                                                                                                                            <CollectionView.ItemTemplate>
                                                                                                                                                                                                                                                                                                            <DataTemplate>
                                                                                                                                                                                                                                                                                                                                <Border Padding="15" Margin="0,10" BackgroundColor="#F0F0F0">
                                                                                                                                                                                                                                                                                                                                                        <Grid ColumnDefinitions="*,Auto">
                                                                                                                                                                                                                                                                                                                                                                                    <VerticalStackLayout Grid.Column="0">
                                                                                                                                                                                                                                                                                                                                                                                                                    <Label Text="{Binding UserName}" FontAttributes="Bold" FontSize="16"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                    <Label Text="{Binding MealSummary}" FontSize="12" TextColor="Gray"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <Label Text="{Binding LastModified, StringFormat='آخرین ویرایش: {0:yyyy/MM/dd HH:mm}'}" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           FontSize="10" TextColor="Gray"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       </VerticalStackLayout>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   <Button Grid.Column="1" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       Text="ویرایش" 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           CommandParameter="{Binding .}"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               Clicked="OnEditPlanClicked"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   VerticalOptions="Center"/>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           </Grid>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               </Border>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               </DataTemplate>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           </CollectionView.ItemTemplate>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   </CollectionView>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       </Grid>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       </ContentPage>